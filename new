	}

	/**
	 * @Test4.2 about this method isOrderTabSelected()
	 * 
	 * @param : null
	 * @description : verify whether the order tab is the currently selected tab
	 * @return : boolean
	 * @author : YAKSHA
	 */
	public boolean isOrderTabSelected() throws Exception {
		// Write the logic here
		WebElement orderselectedelement = ce.findElement(OrderselectedLocator);
		String s = ce.getAttribute(orderselectedelement,"class");
		if( s.equals("link3-active")){
			return true;
		}
			
		return false;
	}
	/**
	 * @Test4.3 about this method areSubTabsUnderOrderPresent()
	 * 
	 * @param : null
	 * @description : verify all sub tabs under order are present
	 * @return : boolean
	 * @author : YAKSHA
	 */
	public boolean areSubTabsUnderOrderPresent() throws Exception {
		// Write the logic here
		WebElement purchaseelement = ce.findElement(purchaseorderLocator);
		WebElement goodsreciptelement = ce.findElement(goodsreceiptLocator);
		
		if(ce.isDisplayed(purchaseelement) && ce.isDisplayed(goodsreciptelement))
		{
			return true;
			
		}
			
			
		return false;
	}



