	/**
	 * @Test3 about this method verifyAndHighlightTab()
	 * @param : String tabName - The name of the tab to verify and highlight
	 * @description : This method locates the tab specified by the tabName parameter
	 *              in the Pharmacy module, highlights it, and returns true if the
	 *              tab is displayed.
	 * @return : boolean - true if the tab is displayed, false otherwise
	 * @throws : Exception - if there is an issue locating or highlighting the tab
	 * @author : YAKSHA
	 */
	public boolean verifyAndHighlightPharmacySubModulesTab(String tabName) throws Exception {
		// Write the logic here
		
		WebElement orderelement = ce.findElement(OrderLocator);
		WebElement supplierelement = ce.findElement(SupplierLocator);
		WebElement reportelement = ce.findElement(ReportLocator);
		WebElement settingelement = ce.findElement(SettingLocator);
		WebElement storeelement = ce.findElement(StoreLocator);
		WebElement supplierLedgerelement = ce.findElement(SupplierledgerLocator);
		WebElement substoreelement = ce.findElement(SubstoreLocator);
		
		switch(tabName)
		{
		case "Order":
		{
	  return ce.isDisplayed(orderelement);
		}
		case "Supplier":
		{
			return ce.isDisplayed(supplierelement);
		}
		case "Report":
		{
			return ce.isDisplayed(reportelement);
		}
		case "Setting":
		{
			return ce.isDisplayed(settingelement);
		}
		case "Store":
		{
			return ce.isDisplayed(storeelement);
		}
		case "SupplierLedger":
		{
			return ce.isDisplayed(supplierLedgerelement);
		}
		case "Substore Request/Dispatch":
		{
			return ce.isDisplayed(substoreelement);
		}
		default:
		{
			return false;	
		}
		}
		
	}
	
